<globals>
	<api>
		<!-- Enums del Tamagotchi -->
		<enumdef name="cat_status_t">
			<enum name="CAT_HAPPY" value="0" />
			<enum name="CAT_UNHAPPY_FOOD" value="1" />
			<enum name="CAT_UNHAPPY_PLAYTIME" value="2" />
			<enum name="CAT_UNHAPPY_AFFECTION" value="3" />
		</enumdef>

		<enumdef name="cat_stage_t">
			<enum name="STAGE_NORWAY" value="0" />
			<enum name="STAGE_SKATER" value="1" />
			<enum name="STAGE_STREAMER" value="2" />
			<enum name="STAGE_JAPAN" value="3" />
		</enumdef>

		<enumdef name="animation_type_t">
			<enum name="ANIM_IDLE_HAPPY" value="0" />
			<enum name="ANIM_UNHAPPY_FOOD" value="1" />
			<enum name="ANIM_UNHAPPY_PLAYTIME" value="2" />
			<enum name="ANIM_UNHAPPY_AFFECTION" value="3" />
			<enum name="ANIM_ACTION_FOOD" value="4" />
			<enum name="ANIM_ACTION_PLAYTIME" value="5" />
			<enum name="ANIM_ACTION_AFFECTION" value="6" />
			<enum name="ANIM_TRANSITION_SKATER" value="7" />
			<enum name="ANIM_TRANSITION_STREAMER" value="8" />
			<enum name="ANIM_TRANSITION_JAPAN" value="9" />
			<enum name="ANIM_TRANSITION_NORWAY" value="10" />
			<enum name="ANIM_BOOT" value="11" />
		</enumdef>
	</api>

	<consts>
		<!-- Constantes de timers -->
		<int name="TIMER_24H_SECONDS" value="86400" />
		<int name="TIMER_TEST_SECONDS" value="24" />

		<!-- Constantes de botones -->
		<int name="BTN_SHORT_PRESS_MS" value="300" />
		<int name="BTN_LONG_PRESS_3S_MS" value="3000" />
		<int name="BTN_LONG_PRESS_15S_MS" value="15000" />

		<!-- Milestones de unhappy counter -->
		<int name="MILESTONE_SKATER" value="3" />
		<int name="MILESTONE_STREAMER" value="6" />
		<int name="MILESTONE_JAPAN" value="9" />
		<int name="MILESTONE_NORWAY" value="12" />
	</consts>

	<styles>
		<!-- Usa directamente el color; si luego quieres referenciar la constante lo ajustamos -->
	</styles>

	<subjects>
		<!-- Variables observables para binding con UI -->
		<int name="g_unhappy_counter" value="0" />
		<int name="g_cat_status" value="0" />
		<int name="g_cat_stage" value="0" />
	</subjects>

	<images>
		<!-- Animaciones del gato -->
		<file src_path="assets/anim_idle_happy.png" name="anim_idle_happy" />
		<file src_path="assets/anim_unhappy_food.png" name="anim_unhappy_food" />
		<file src_path="assets/anim_unhappy_playtime.png" name="anim_unhappy_playtime" />
		<file src_path="assets/anim_unhappy_affection.png" name="anim_unhappy_affection" />
		<file src_path="assets/anim_action_food.png" name="anim_action_food" />
		<file src_path="assets/anim_action_playtime.png" name="anim_action_playtime" />
		<file src_path="assets/anim_action_affection.png" name="anim_action_affection" />
		<file src_path="assets/anim_transition_skater.png" name="anim_transition_skater" />
		<file src_path="assets/anim_transition_streamer.png" name="anim_transition_streamer" />
		<file src_path="assets/anim_transition_japan.png" name="anim_transition_japan" />
		<file src_path="assets/anim_transition_norway.png" name="anim_transition_norway" />
		<file src_path="assets/anim_boot.png" name="anim_boot" />
	</images>

	<fonts>
		<!-- Añade fuentes custom aquí si las necesitas -->
		<!-- <bin src_path="fonts/custom_font.bin" name="my_font"/> -->
	</fonts>
</globals>
